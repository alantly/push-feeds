@SubscribeBtn = React.createClass
  getInitialState: ->
    if 'serviceWorker' of navigator
      console.log('Service Worker is supported')
      navigator.serviceWorker.register("<%= asset_path 'notification/sw.js' %>")
      .then((serviceWorkerRegistration) =>
        @state.reg = serviceWorkerRegistration
        @state.reg.pushManager.getSubscription().then(@handleSubscriptionExists)
        @setState available: true
        console.log('Service Worker is ready :^)', @state.reg)
      ).catch( (error) ->
        console.log('Service Worker Error :^(', error)
      )
    reg: null
    sub: null
    client: null
    isSubscribed: false
    available: false
    title: "Subscribe"

  handleSubscriptionExists: (pushSubscription) ->
    if pushSubscription
      $.get
        url: "/clients/"
        data: subId: pushSubscription.endpoint
        dataType: 'JSON'
        success: (data) =>
          console.log('Get successful')
          @setState { isSubscribed: true, title: 'Unsubscribe', sub: pushSubscription, client: data}
      , 'JSON'

  handleClick: (e) ->
    e.preventDefault()
    if @state.isSubscribed
      @unsubscribe()
    else
      @subscribe()

  subscribe: ->
    @state.reg.pushManager.subscribe( userVisibleOnly: true )
    .then( (pushSubscription) =>
      @state.sub = pushSubscription
      console.log('Subscribed! Endpoint:', @state.sub.endpoint)
      $.post '/clients', { client: { notification_address: @state.sub.endpoint } }, (data) =>
        console.log('Post successful:', data)
        @setState { isSubscribed: true, title: 'Unsubscribe', client: data}
      , 'JSON'
    )

  unsubscribe: ->
    @state.sub.unsubscribe().then( (event) =>
      console.log('Unsubscribed!', event)
      $.ajax
        method: 'DELETE'
        url: "/clients/#{ @state.client.id }"
        dataType: 'JSON'
        success: () =>
          console.log('Delete successful')
          @setState { isSubscribed: false, title: 'Subscribe' }
      , 'JSON'
    ).catch( (error) =>
      console.log('Error unsubscribing', error)
    )

  render: ->
    React.DOM.button
      className: "btn btn-primary"
      id: "sub-push-notif-btn"
      disabled: !@state.available
      onClick: @handleClick
      @state.title
